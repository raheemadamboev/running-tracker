<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/run_i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/date_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/duration_t"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/run_i" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/duration_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/distance_t"
        app:layout_constraintStart_toEndOf="@id/date_t"
        app:layout_constraintTop_toBottomOf="@id/run_i" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/distance_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/average_speed_t"
        app:layout_constraintStart_toEndOf="@id/duration_t"
        app:layout_constraintTop_toBottomOf="@id/run_i" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/average_speed_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@id/calories_t"
        app:layout_constraintStart_toEndOf="@id/distance_t"
        app:layout_constraintTop_toBottomOf="@id/run_i" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/calories_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/average_speed_t"
        app:layout_constraintTop_toBottomOf="@id/run_i" />
</androidx.constraintlayout.widget.ConstraintLayout>